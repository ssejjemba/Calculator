<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:text="0"
            android:ems="10"
            android:id="@+id/etResults" android:gravity="end" android:paddingTop="10pt"/>
    <TableLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="AC"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/buAC"/>
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="+/-"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/buSign"/>
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="%"
                    android:textSize="14sp"
                    android:onClick="btnOperationEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/buPercent"/>
            <Button
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@color/orange"
                    android:text="/"
                    android:textSize="14sp"
                    android:onClick="btnOperationEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/buDivide"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="7"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/bu7"/>
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="8"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/bu8"/>
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="9"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/bu9"/>
            <Button
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@color/orange"
                    android:text="*"
                    android:textSize="14sp"
                    android:onClick="btnOperationEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/buMultiply"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="4"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/bu4"/>
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="5"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/bu5"/>
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="6"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/bu6"/>
            <Button
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@color/orange"
                    android:text="-"
                    android:textSize="14sp"
                    android:onClick="btnOperationEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/buSubtract"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="1"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/bu1"/>
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="2"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/bu2"/>
            <Button
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="3"
                    android:textSize="14sp"
                    android:onClick="btnNumberEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/bu3"/>
            <Button
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@color/orange"
                    android:text="+"
                    android:textSize="14sp"
                    android:onClick="btnOperationEvent"
                    android:layout_width="20pt"
                    android:layout_height="20pt" android:id="@+id/buAdd"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button

                android:background="@color/whiteback"
                android:text="0"
                android:textSize="14sp"
                android:onClick="btnNumberEvent"
                android:layout_width="40pt"
                android:layout_height="20pt" android:id="@+id/bu0" android:layout_weight="2"/>
        <Button
                android:background="@color/whiteback"
                android:text="."
                android:textSize="14sp"
                android:onClick="btnNumberEvent"
                android:layout_width="20pt"
                android:layout_height="20pt" android:id="@+id/buDot" android:layout_weight="1"/>
        <Button
                android:textColor="@color/white"
                android:background="@color/orange"
                android:text="="
                android:textSize="14sp"
                android:onClick="btnEquals"
                android:layout_width="20pt"
                android:layout_height="20pt" android:id="@+id/buEquals" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>